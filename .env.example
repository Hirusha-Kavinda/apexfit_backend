# ApexFit Backend - Environment Configuration Template
# Copy this file to .env and update the values according to your environment

# ===========================================
# SERVER CONFIGURATION
# ===========================================
NODE_ENV=development
PORT=8080

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# Database URL - Update with your actual database credentials
DATABASE_URL="mysql://username:password@localhost:3306/apexfit_db"

# ===========================================
# JWT CONFIGURATION
# ===========================================
# JWT secret - Generate a strong secret key for production
JWT_SECRET=your_jwt_secret_key_here

# ===========================================
# EMAIL CONFIGURATION (SMTP)
# ===========================================
# SMTP settings for email notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here
SMTP_FROM="ApexFit <noreply@apexfit.com>"

# ===========================================
# TESTING CONFIGURATION
# ===========================================
# Test timeout settings
TEST_TIMEOUT=10000

# Test database cleanup
CLEANUP_TEST_DB=true

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
# Log level (debug, info, warn, error)
LOG_LEVEL=info

# ===========================================
# CORS CONFIGURATION
# ===========================================
# Allowed origins
CORS_ORIGIN=http://localhost:3000

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
# Bcrypt salt rounds
BCRYPT_ROUNDS=10

# Session configuration
SESSION_SECRET=your_session_secret_here

# ===========================================
# API CONFIGURATION
# ===========================================
# API version
API_VERSION=v1

# Rate limiting (requests per minute)
RATE_LIMIT=100

# ===========================================
# FEATURE FLAGS
# ===========================================
# Enable/disable features
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_MEETING_REMINDERS=true
ENABLE_EXERCISE_TRACKING=true
ENABLE_DAY_TRACKER=true

# ===========================================
# EXTERNAL SERVICES
# ===========================================
# External API endpoints
EXTERNAL_API_BASE_URL=https://api.example.com
EXTERNAL_API_KEY=your_api_key_here

# ===========================================
# MONITORING & ANALYTICS
# ===========================================
# Analytics and monitoring
ENABLE_ANALYTICS=false
ANALYTICS_API_KEY=your_analytics_key

# ===========================================
# BACKUP & RECOVERY
# ===========================================
# Backup configuration
BACKUP_ENABLED=false
BACKUP_INTERVAL=24h
BACKUP_RETENTION_DAYS=30
