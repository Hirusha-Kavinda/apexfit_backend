# ApexFit Backend - Test Environment Configuration
# This file contains test environment variables for the ApexFit backend application

# ===========================================
# SERVER CONFIGURATION
# ===========================================
NODE_ENV=test
PORT=3001

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# Test database URL - Use a separate test database
DATABASE_URL="mysql://test_user:test_password@localhost:3306/apexfit_test_db"

# ===========================================
# JWT CONFIGURATION
# ===========================================
# JWT secret for test environment (use a different secret for testing)
JWT_SECRET=test_jwt_secret_key_for_apexfit_backend_testing_only

# ===========================================
# EMAIL CONFIGURATION (SMTP)
# ===========================================
# SMTP settings for email notifications (test configuration)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=test@apexfit.com
SMTP_PASS=test_app_password_here
SMTP_FROM="ApexFit Test <test@apexfit.com>"

# ===========================================
# TESTING CONFIGURATION
# ===========================================
# Test timeout settings
TEST_TIMEOUT=10000

# Test database cleanup
CLEANUP_TEST_DB=true

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
# Log level for testing (debug, info, warn, error)
LOG_LEVEL=debug

# ===========================================
# CORS CONFIGURATION
# ===========================================
# Allowed origins for testing
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
# Bcrypt salt rounds for testing (lower for faster tests)
BCRYPT_ROUNDS=4

# Session configuration
SESSION_SECRET=test_session_secret_for_apexfit

# ===========================================
# API CONFIGURATION
# ===========================================
# API version
API_VERSION=v1

# Rate limiting (requests per minute for testing)
RATE_LIMIT=1000

# ===========================================
# FEATURE FLAGS FOR TESTING
# ===========================================
# Enable/disable features for testing
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_MEETING_REMINDERS=true
ENABLE_EXERCISE_TRACKING=true
ENABLE_DAY_TRACKER=true

# ===========================================
# TEST DATA CONFIGURATION
# ===========================================
# Default test user credentials
TEST_ADMIN_EMAIL=admin@apexfit.test
TEST_ADMIN_PASSWORD=admin123
TEST_USER_EMAIL=user@apexfit.test
TEST_USER_PASSWORD=user123

# Test meeting configuration
TEST_MEETING_DURATION=60
TEST_EXERCISE_PLAN_VERSION=1

# ===========================================
# EXTERNAL SERVICES (TEST)
# ===========================================
# External API endpoints for testing
EXTERNAL_API_BASE_URL=https://api.test.example.com
EXTERNAL_API_KEY=test_api_key_here

# ===========================================
# MONITORING & ANALYTICS (TEST)
# ===========================================
# Analytics and monitoring for testing
ENABLE_ANALYTICS=false
ANALYTICS_API_KEY=test_analytics_key

# ===========================================
# BACKUP & RECOVERY (TEST)
# ===========================================
# Backup configuration for testing
BACKUP_ENABLED=false
BACKUP_INTERVAL=24h
BACKUP_RETENTION_DAYS=7
